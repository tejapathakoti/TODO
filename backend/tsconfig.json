{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
     "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "skipLibCheck": true,
    "types": ["vitest/globals", "node"],
    "outDir": "build",
    "rootDir": "src" 
  },
  "include": ["src/**/*.ts"], 
  "exclude": ["node_modules"]
}
